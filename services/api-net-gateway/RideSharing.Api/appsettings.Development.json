{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "auth-user-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/v1/User/{**catch-all}"
        }
      },
      "auth-email-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/v1/email/{**catch-all}"
        }
      },
      "auth-cities-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/v1/cities/{**catch-all}"
        }
      },
      "auth-token-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/v1/XFWToken/{**catch-all}"
        }
      },
      "logger-route": {
        "ClusterId": "logger-cluster",
        "Match": {
          "Path": "/api/v1/Logger/{**catch-all}"
        }
      },
      "mail-route": {
        "ClusterId": "mail-cluster",
        "Match": {
          "Path": "/api/v1/Mail/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-destination": {
            "Address": "http://localhost:8080"
          }
        }
      },
      "logger-cluster": {
        "Destinations": {
          "logger-destination": {
            "Address": "http://localhost:8082"
          }
        }
      },
      "mail-cluster": {
        "Destinations": {
          "mail-destination": {
            "Address": "http://localhost:8083"
          }
        }
      }
    }
  }
}
