<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %> - NG Word Search</title>

    <!-- Tailwind CSS -->
    <script src="http://cdn.tailwindcss.com"></script>
    <script>
      // Debug: Check if Tailwind loaded
      if (typeof tailwind !== 'undefined') {
        console.log('✅ Tailwind CSS loaded successfully!');
      } else {
        console.log('❌ Tailwind CSS failed to load');
        // Fallback: Try alternative CDN
        const script = document.createElement('script');
        script.src = 'https://unpkg.com/tailwindcss@^3/dist/tailwind.min.js';
        document.head.appendChild(script);
      }
    </script>

    <!-- Custom CSS - Only background gradient -->
    <style>
      body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }

      /* Fallback Tailwind-like styles if CDN fails */
      .text-red-500 {
        color: #ef4444 !important;
      }
      .text-4xl {
        font-size: 2.25rem !important;
      }
      .font-bold {
        font-weight: 700 !important;
      }
      .mb-2 {
        margin-bottom: 0.5rem !important;
      }
      .text-gray-600 {
        color: #4b5563 !important;
      }
      .text-lg {
        font-size: 1.125rem !important;
      }
      .mb-8 {
        margin-bottom: 2rem !important;
      }
      .text-center {
        text-align: center !important;
      }
      .min-h-screen {
        min-height: 100vh !important;
      }
      .flex {
        display: flex !important;
      }
      .items-center {
        align-items: center !important;
      }
      .justify-center {
        justify-content: center !important;
      }
      .p-5 {
        padding: 1.25rem !important;
      }
      .bg-white\/95 {
        background-color: rgba(255, 255, 255, 0.95) !important;
      }
      .backdrop-blur-lg {
        backdrop-filter: blur(16px) !important;
      }
      .rounded-3xl {
        border-radius: 1.5rem !important;
      }
      .shadow-2xl {
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25) !important;
      }
      .p-10 {
        padding: 2.5rem !important;
      }
      .w-full {
        width: 100% !important;
      }
      .max-w-md {
        max-width: 28rem !important;
      }
      .border {
        border-width: 1px !important;
      }
      .border-white\/20 {
        border-color: rgba(255, 255, 255, 0.2) !important;
      }
    </style>
  </head>
  <body>
    <div class="min-h-screen flex items-center justify-center p-5">
      <div class="bg-white/95 backdrop-blur-lg rounded-3xl shadow-2xl p-10 w-full max-w-md border border-white/20">
        <%- body %>
      </div>
    </div>
  </body>
</html>
