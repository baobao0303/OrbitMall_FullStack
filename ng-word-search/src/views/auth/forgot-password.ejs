<div class="auth-header">
    <h1>Forgot Password</h1>
    <p>Enter your email to reset your password</p>
</div>

<% if (locals.error) { %>
    <div class="error-message">
        <%= error %>
    </div>
<% } %>

<% if (locals.success) { %>
    <div class="success-message">
        <%= success %>
    </div>
<% } %>

<form id="forgotPasswordForm" onsubmit="handleForgotPassword(event)">
    <div class="form-group">
        <label for="email" class="form-label">Email</label>
        <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            value="<%= locals.email || '' %>"
            required
            autocomplete="email"
            placeholder="Enter your email address"
        >
    </div>

    <button type="submit" class="btn btn-primary">Send Reset Link</button>
</form>

<div class="auth-links">
    <a href="/login">Back to Login</a>
</div>

<script>
async function handleForgotPassword(event) {
    event.preventDefault();

    const formData = new FormData(event.target);
    const data = {
        email: formData.get('email')
    };

    try {
        const response = await fetch('/auth/api/forgot-password', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
            body: JSON.stringify(data)
        });

        const result = await response.json();

        if (result.success) {
            // Show success message
            alert(result.message || 'Reset instructions sent to your email');
            // Redirect back to login
            window.location.href = '/login?success=Reset instructions sent to your email';
        } else {
            // Show error message
            alert(result.message || 'Failed to process request');
        }
    } catch (error) {
        console.error('Forgot password error:', error);
        alert('Failed to process request. Please try again.');
    }
}
</script>
